{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "lib": ["es2017"],
    "noEmit": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "esnext",
    "module": "CommonJS"
  },
  "typeAcquisition": {
    "enable": true
  }
}
