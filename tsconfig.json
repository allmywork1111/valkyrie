{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "lib": ["es2017"],
    "noEmit": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["mocha"],
    "target": "esnext"
  },
  "typeAcquisition": {
    "enable": true
  },
}
