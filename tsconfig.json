{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "lib": ["ESNext"],
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node"
  },
  "typeAcquisition": {
    "enable": true
  }
}
